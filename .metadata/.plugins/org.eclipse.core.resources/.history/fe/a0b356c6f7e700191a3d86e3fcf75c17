package com.bridgelabz.datastructures;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.util.Arrays;
import com.bridgelabz.algorithmprograms.Utility;

public class LinkedLists<T> 
{
	public static class Node<T>
	{
			T data;
			Node next,prev;
	}


	 Node head,last;
	

	

public LinkedLists() 
{
	// TODO Auto-generated constructor stub
}

public void printList() 
{ 
   Node currentNode = head;
   System.out.print("LinkedList: "); 
   // Traverse through the LinkedList 
   while (currentNode != null) 
   { 
   // Print the data at current node 
   System.out.print(currentNode.data + " "); 
   // Go to next node 
   currentNode = currentNode.next; 
   } 
} 
 
public  void insert(T data) 
{ 
   // Create a new node with given data 
   Node newnode = new Node<T>(); 
   newnode.data = data;
  
   // If the Linked List is empty, 
   // then make the new node as head 
   if (head == null) 
   { 
    head = last = newnode; 
   } 
   else 
   { 
    // Else traverse till the last node 
    // and insert the new_node there   
          last.next = newnode;
          newnode.prev = last;
          last = newnode;
          
        } 
   // Insert the new_node at last node  
    
    
   } 


//Checks whether the value x is present in linked list 
private boolean search(T i) 
{ 
    Node current = head;    //Initialize current 
    while (current != null) 
    { 
        if (current.data.equals(i)) 
            return true;    //data found 
        current = current.next; 
    } 
    return false;    //data not found 
} 




private void deleteByKey(T key) 
{ 
  // Store head node 
  Node temp = head;
 
 
      
  if (temp.data.equals(key)) 
  { 
    head = temp.next; // Changed head 
    // Display the message 
    System.out.println(key + " found and deleted"); 
    return;
    // Return the updated List 
  }
  while(temp.data != null && temp.data != key) 
  {
            
           temp.prev = temp.next;
           
  }
	 while (temp.next != last) 
	 {
		 temp = temp.next;
	 }
	 temp.next = null;
		
	}

} 
 
 
public static void main(String[] args) throws IOException
{
		
		LinkedLists<String> l = new LinkedLists<String>();
		
		File file=new File("/home/admin1/Desktop/aa");     

				//	arr[i] = Integer.parseInt(str[i]);
				//}
		    	 for (int i = 0; i < str.length; i++) {
					l.insert(str[i]);
				}
		    	 l.printList();
		    	String s = Utility.stringScanner();
		    	 if (l.search(s)) {
		    		 
					System.out.println("Found");
					l.deleteByKey(s);
					l.printList();
				}
		    	 else
		    	 {
		    		 System.out.println("Not Found");
		    		// l.insert(s);
		    		// l.printList();
		    	 }
		    	
		    //	 l.deleteByKey(s);
		    		
		      }

		
	       } catch (Exception e) 
